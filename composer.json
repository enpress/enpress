{
    "name": "enpress/enpress",
    "description": "The Enpress Framework.",
    "keywords": ["framework", "enpress", "laravel", "wordpress"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wp-premium/advanced-custom-fields-pro",
                "type": "wordpress-plugin",
                "version": "1.0.0",
                "source": {
                    "url": "https://github.com/wp-premium/advanced-custom-fields-pro",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "~4.0",
        "enpress/framework": "dev-master",
        "johnpbloch/wordpress": "^4.7",
        "composer/installers": "^1.0",
        "wp-premium/advanced-custom-fields-pro": "1.0.0",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "nunomaduro/collision": "~1.1",
        "phpunit/phpunit": "~7.0",
        "symfony/thanks": "~1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        },
        "installer-paths": {
            "public/content/mu-plugins/{$name}/": [
                "wp-premium/advanced-custom-fields-pro"
            ],
            "public/content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ]
        },
        "wordpress-install-dir": {
            "johnpbloch/wordpress-core": "public/cms"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate",
            "@php artisan salts:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
